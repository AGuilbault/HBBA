<package>
  <description brief="script_engine">
    script_engine - A modular, javascript execution engine based on Google V8.
  </description>
  <author>Francois Ferland</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url></url>
  <depend package="roscpp"/>
  <depend package="pluginlib"/>
  <depend package="std_msgs"/>
  <depend package="std_srvs"/>
  <rosdep name="libv8"/>
  <!-- TODO: Move these plugin dependencies into a separate module. -->
  <depend package="geometry_msgs"/>
  <depend package="tf"/>

  <export>
  	<cpp cflags='-I${prefix}/include' lflags='-L${prefix}/lib -lengine_v8'/>
	<script_engine plugin="${prefix}/common_plugins.xml"/>
  </export>
</package>

